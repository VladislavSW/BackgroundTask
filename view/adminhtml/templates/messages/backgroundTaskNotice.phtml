/** @var $block Magento\Framework\View\Element\Message\Renderer\BlockRenderer\Template */
/** @var $escaper Magento\Framework\Escaper */

$taskId = $block->escapeUrl($block->getData('task_id'));
$backgroundTaskListUrl = $escaper->escapeHtml($block->getData('background_task_list_url'));
$additionalMessage = $escaper->escapeHtml($block->getData('additional_message'));
$additionalMessage = $additionalMessage ? $additionalMessage . '<br/>' : $additionalMessage;
$message = __(
    $additionalMessage
    . "The selected task will run in the background with the <strong>ID {$taskId}</strong>.
    <br/>See the background task list <a href='{$backgroundTaskListUrl}'>here</a>."
);
?>
<?= $message ?>
